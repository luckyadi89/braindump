# BrainDump Application Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# OpenAI API for Whisper (transcription) and GPT-4 (text enhancement)
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Settings
NEXT_PUBLIC_APP_NAME=BrainDump
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security (generate a random 32+ character string)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Optional: Additional AI Services
# ANTHROPIC_API_KEY=your_claude_api_key_here
# GOOGLE_AI_API_KEY=your_gemini_api_key_here

# Optional: Integration APIs
# GMAIL_CLIENT_ID=your_gmail_client_id
# GMAIL_CLIENT_SECRET=your_gmail_client_secret
# ZAPIER_WEBHOOK_URL=your_zapier_webhook_url
